//Generation
draw_text(room_width/2, 50, "GENERATION " + string(global.generation));

//Mostramos por pantalla
for(i = 0; i &lt; global.num_players; i++){
    draw_text(50, i * 40 + 10, "Player " + string(i));
    if(global.player[i, 0] == 0){
        if(i == connected_gamepads) //Control para jugador de tclado
            draw_text(50, i * 40 + 30, "Press Enter");
        else
            draw_text(50, i * 40 + 30, "Press A");
        
    }
    else if(global.player[i, 1] == 0)
        draw_text(50, i * 40 + 30, "Choose a character");
    else{ //En guarro
        switch(global.player[i, 1]){
            case 1:
                draw_text(50, i * 40 + 30, "Warrior");
            break;
            case 2:
                draw_text(50, i * 40 + 30, "Ranger");
            break;
        }
    }
}

//To quit
draw_text(1200, 600, "B/ESC Quit");
