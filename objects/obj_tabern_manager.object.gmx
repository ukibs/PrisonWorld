            <kind>1</kind>
            <string>//Check constantly the number of gamepads
connected_gamepads = 0;
for(i = 0; i &lt; 4; i++){
    connected_gamepads += gamepad_is_connected(i);
}

//Control para jugador con teclado
global.num_players = connected_gamepads + 1;
global.num_players = min(global.num_players, 4);

//Control de aceptado
for(i = 0; i &lt; connected_gamepads; i++){
    if(gamepad_button_check_pressed(i, gp_face1) &amp;&amp; global.player[i, 0] == 0){
        global.player[i, 0] = 1;
        selector = instance_create(250 + (i * 100), 150 + (i*100), obj_character_selector);
        selector.player_num = i;
    }
}
//Teclado
if(keyboard_check_pressed(vk_enter) &amp;&amp; global.num_players &gt; connected_gamepads
    &amp;&amp; global.player[global.num_players-1, 0] == 0){
     global.player[global.num_players-1, 0] = 2;
     selector = instance_create(250 + (i * 100), 150 + (i*100), obj_character_selector);
     selector.player_num = connected_gamepads;
}
     
// In case of disconected controller
global.player[global.num_players, 0] = 0;

//En feo
if(gamepad_button_check_pressed(0, gp_face2) || keyboard_check_pressed(vk_escape))
    room_goto(room_settlement);
</string>
